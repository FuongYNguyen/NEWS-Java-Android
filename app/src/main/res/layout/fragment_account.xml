<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAccountFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="30dp"
        >

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:justifyContent="space_between">

            <TextView
                android:id="@+id/hello2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:autofillHints="Email"
                android:drawablePadding="8dp"
                android:fontFamily="@font/inter_extrabold"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:text="Xin chào Admin!"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_image"
                app:shapeAppearanceOverlay="@style/CustomShapeAppearance" />
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="16sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/account_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="#0000"
            android:drawableStart="@drawable/baseline_manage_accounts_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="Quản lý tài khoản cá nhân"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/account_manage_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#0000"
            android:drawableStart="@drawable/baseline_supervisor_account_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="Quản lý tài khoản người dùng"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/news_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#0000"
            android:drawableStart="@drawable/baseline_newspaper_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="Quản lý bài báo"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/category_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#0000"
            android:drawableStart="@drawable/baseline_category_24_pu"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="Quản lý thể loại"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#0000"
            android:drawableStart="@drawable/baseline_logout_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="Đăng xuất"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp" />


    </LinearLayout>
</FrameLayout>